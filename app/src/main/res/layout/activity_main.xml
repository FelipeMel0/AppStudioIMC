<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:padding="36dp"
    android:background="@drawable/activity_background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@drawable/imc_icone_branco"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="IMC"
                android:gravity="center"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginBottom="15dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Digite seu peso aqui"
                android:textAlignment="center"
                android:background="@drawable/activity_stroke"
                android:padding="10dp"
                android:layout_marginBottom="25dp"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Digite sua altura aqui"
                android:textAlignment="center"
                android:background="@drawable/activity_stroke"
                android:padding="10dp"
                android:layout_marginBottom="25dp"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Calcular"
                android:background="@drawable/activity_button"
                android:textColor="@android:color/white"
                />

            <TextView
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/activity_result"
                android:padding="15dp"
                android:text="29.0"
                android:textSize="60sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Peso Ideal"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="24sp"/>

        </LinearLayout>


    </ScrollView>

</LinearLayout>